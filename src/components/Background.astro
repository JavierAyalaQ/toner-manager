    animation: bgAnimation 10s linear infinite;
  }
    @keyframes bgAnimation {
      0% {
        opacity: 0.2;
      }
      50% {
        opacity: 0.15;
        width: 400px;
        height: 400px;
      }
      75% {
      }
      100% {
        opacity: 0.2;
        width: 310px;
        height: 310px;
      }
    }

  @media (prefers-reduced-motion: reduce) {
    .bg-animation {
      animation: none;
    }
  }
</style>